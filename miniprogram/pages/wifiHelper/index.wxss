/* miniprogram/pages/wifiHelper/index.wxss */
.container {
  width: 100%;
  height: calc(100vh - 60px);
  background-color: #F8F8FF;
}

.box-area {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.wifiIcon {
  width: 120rpx;
  height: 120rpx;
}

.hoverClass {
  transform: translate(1rpx, 1rpx);
}

.list {
  width: calc(100vw - 20px);
  height: calc(100vh - 30rpx);
  overflow-y: scroll;
  margin: 0rpx 20rpx;
  margin-bottom: 30rpx;
  background-color: #F8F8FF;
}

.sin-part {
  width: 100%;
  margin: 20rpx 0rpx;
  border-radius: 10rpx;
  border: 2rpx solid var(--green);
}

.in-part {
  margin: 0rpx 20rpx;
  padding: 20rpx 0rpx;
  justify-content: space-between;
  align-items: center;
}

.left-part {
  width: 76%;
}

.name-text {
  display: flex;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
}

.text-sty {
  font-size: 26rpx;
  font-weight: bold;
  text-align: left;
  margin: 10rpx 0rpx;
}

.con-btn .cu-btn {
  width: 130rpx !important;
  min-height: 50rpx !important;
}

.action {
  width: 100%;
}

.action .cu-btn {
  width: 200rpx !important;
  min-height: 50rpx !important;
}

.mid-inp {
  align-items: center;
  justify-content: space-around;
}

.input-box {
  min-width: 400rpx;
  padding: 0rpx 20rpx;
  height: 60rpx;
  align-items: center;
  border-radius:10rpx ;
  border: 2rpx solid var(--olive);
  justify-content:space-between ;
}
.shadow-box{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 140rpx;
  left: 0;
  margin: auto;
  width: 330rpx;
  height: 240rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 0 0rpx 2000rpx rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  font-size: 28rpx;
  z-index: 9999;
  line-height: 2.4em;
}